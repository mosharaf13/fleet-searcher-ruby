<div class="d-flex justify-content-center mt-4">
  <nav aria-label="Pagination">
    <ul class="pagination">
      <% if @pagy.prev %>
        <li class="page-item">
          <%= link_to '&laquo;'.html_safe, url_for(page: @pagy.prev), class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">&laquo;</span>
        </li>
      <% end %>

      <% @pagy.series.each do |item| %>
        <% if item.is_a?(Integer) %>
          <% if item == @pagy.page %>
            <li class="page-item active">
              <span class="page-link"><%= item %></span>
            </li>
          <% else %>
            <li class="page-item">
              <%= link_to item, url_for(page: item), class: 'page-link' %>
            </li>
          <% end %>
        <% else %>
          <li class="page-item disabled">
            <span class="page-link"><%= item.to_s.tr('_', ' ') %></span>
          </li>
        <% end %>
      <% end %>

      <% if @pagy.next %>
        <li class="page-item">
          <%= link_to '&raquo;'.html_safe, url_for(page: @pagy.next), class: 'page-link' %>
        </li>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">&raquo;</span>
        </li>
      <% end %>
    </ul>
  </nav>
</div>
